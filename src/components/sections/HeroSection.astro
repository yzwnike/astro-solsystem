---
export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaAction?: string;
  showIcons?: boolean;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Solicitar presupuesto",
  ctaAction = "document.getElementById('form')?.scrollIntoView({behavior: 'smooth'})",
  showIcons = true,
  backgroundImage = "/images/fondo.png"
} = Astro.props;

const icons = [
  "bolt",
  "electrical_services", 
  "build",
  "description",
  "business"
];
---

<section class="hero-section" id="inicio">
  <div class="hero-content">
    <div class="container">
      {showIcons && (
        <div class="icon-row">
          {icons.map(icon => (
            <span class="icon-item material-icons" style="font-size: 32px;">{icon}</span>
          ))}
        </div>
      )}

      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>

      <button 
        class="main-cta-button" 
        onclick={ctaAction}
      >
        {ctaText}
      </button>
    </div>
  </div>
</section>

<style define:vars={{ backgroundImage }}>
  .hero-section {
    background: url(var(--backgroundImage)) center/cover no-repeat;
    min-height: 100vh;
    position: relative;
    display: flex;
    flex-direction: column;
    color: var(--text-white);
    padding-top: 0;
    padding-bottom: 0;
  }

  .hero-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 120px 20px 80px;
  }

  .icon-row {
    display: flex;
    gap: 30px;
    margin-bottom: 40px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .icon-item {
    color: var(--text-white);
    font-size: 32px;
    opacity: 0.9;
    transition: opacity 0.3s;
  }

  .icon-item:hover {
    opacity: 1;
  }

  .hero-title {
    font-size: 36px;
    font-size: 2.25rem;
    font-weight: 600;
    line-height: 1.4em;
    color: var(--text-white);
    padding: 0;
    margin: 0 0 40px 0;
    max-width: 1400px;
    position: relative;
    overflow: hidden;
    background: linear-gradient(
      90deg,
      #ffffff 0%,
      #ffffff 25%,
      #53C307 50%,
      #ffffff 75%,
      #ffffff 100%
    );
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: hero-title-scroll 8s ease-in-out infinite;
  }

  @keyframes hero-title-scroll {
    0% {
      background-position: 0% 50%;
      -webkit-text-fill-color: transparent;
    }
    25% {
      background-position: 100% 50%;
      -webkit-text-fill-color: transparent;
    }
    50% {
      background-position: 200% 50%;
      -webkit-text-fill-color: transparent;
    }
    75% {
      background-position: 300% 50%;
      -webkit-text-fill-color: transparent;
    }
    100% {
      background-position: 400% 50%;
      -webkit-text-fill-color: transparent;
    }
  }

  .hero-subtitle {
    font-size: 22px;
    line-height: 1.5;
    margin-bottom: 60px;
    max-width: 1400px;
    opacity: 0.95;
    margin-left: auto;
    margin-right: auto;
    color: var(--text-white);
    letter-spacing: 0.5px;
  }

  .main-cta-button {
    background: var(--green-primary);
    color: white;
    padding: 14px 24px;
    border-radius: 8px;
    font-size: 24px;
    font-weight: 500;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(83, 195, 7, 0.3);
  }

  .main-cta-button:hover {
    background: var(--green-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(83, 195, 7, 0.4);
  }

  @media (max-width: 921px) {
    .hero-title {
      font-size: 30px;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }
  }
</style>
