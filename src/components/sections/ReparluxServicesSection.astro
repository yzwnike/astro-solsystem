---
export interface Props {
  title?: string;
}

const { 
  title = "Boletines eléctricos (CIE)"
} = Astro.props;

const services = [
  {
    title: "Certificado eléctrico para Vivienda",
    description: "Solicita el CIE para tu hogar: aumentos de potencia, cambios de titular, nuevos suministros.",
    icon: "home",
    features: ["Aumentos de potencia", "Cambios de titular", "Nuevos suministros"]
  },
  {
    title: "Certificado eléctrico para Local Comercial",
    description: "Solicita el CIE para tu negocio: altas de suministro, licencias de actividad, aumentos de potencia.",
    icon: "business",
    features: ["Altas de suministro", "Licencias de actividad", "Aumentos de potencia"]
  },
  {
    title: "Certificado eléctrico para Autoconsumo",
    description: "Solicita el CIE para tu instalación Fotovoltaica: legaliza la instalación para acceder a las ayudas.",
    icon: "solar_power",
    features: ["Instalaciones fotovoltaicas", "Acceso a ayudas", "Legalización completa"]
  },
  {
    title: "Certificado eléctrico para IRVE",
    description: "Solicita el CIE para tu instalación de recarga, y gestiona las ayudas MOVES.",
    icon: "ev_station",
    features: ["Puntos de recarga", "Ayudas MOVES", "Tramitación completa"]
  }
];
---

<section class="reparlux-services-section" id="servicios">
  <div class="services-container">
    <h2 class="services-title">{title}</h2>
    <p class="services-subtitle">
      Legalización de instalación eléctrica, tramitación ante distribuidora y más
    </p>

    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon">
            <span class="material-icons">{service.icon}</span>
          </div>
          <div class="service-content">
            <h3 class="service-title">{service.title}</h3>
            <p class="service-description">{service.description}</p>
            <ul class="service-features">
              {service.features.map((feature) => (
                <li>
                  <span class="feature-icon material-icons">check_circle</span>
                  {feature}
                </li>
              ))}
            </ul>
            <button 
              class="service-cta-button"
              onclick="document.getElementById('form')?.scrollIntoView({behavior: 'smooth'})"
            >
              Solicitar presupuesto
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .reparlux-services-section {
    padding: 80px 20px;
    background: white;
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .services-title {
    font-size: 36px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 20px;
    text-align: center;
  }

  .services-subtitle {
    font-size: 18px;
    color: #666;
    margin-bottom: 60px;
    text-align: center;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .service-card {
    background: white;
    border-radius: 12px;
    padding: 30px 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #f0f0f0;
    text-align: left;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    border-color: var(--green-primary);
  }

  .service-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--green-primary), #45a006);
    border-radius: 50%;
    margin: 0 auto 20px;
  }

  .service-icon .material-icons {
    color: white;
    font-size: 28px;
  }

  .service-content {
    text-align: center;
  }

  .service-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .service-description {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 25px 0;
    text-align: left;
  }

  .service-features li {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
    font-size: 14px;
    color: #555;
  }

  .feature-icon {
    color: var(--green-primary);
    font-size: 18px !important;
    margin-right: 8px;
  }

  .service-cta-button {
    background: var(--green-primary);
    color: white;
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    margin-top: 10px;
  }

  .service-cta-button:hover {
    background: var(--green-hover);
    transform: translateY(-1px);
  }

  /* Responsive */
  @media (max-width: 921px) {
    .services-title {
      font-size: 28px;
    }

    .services-subtitle {
      font-size: 16px;
    }

    .services-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 25px;
    }

    .service-card {
      padding: 25px 15px;
    }
  }

  @media (max-width: 544px) {
    .reparlux-services-section {
      padding: 60px 15px;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-title {
      font-size: 18px;
    }

    .service-description {
      font-size: 14px;
    }
  }
</style>
