  title = "¿Necesitas un boletín eléctrico? ¿Te han pedido legalizar una instalación? Estás en el lugar adecuado.", 
  subtitle, 
  ctaText = "SOLICITA TU PRESUPUESTO YA",
  ctaAction = "document.getElementById('form')?.scrollIntoView({behavior: 'smooth'})",
  price = "Desde 99€"
} = Astro.props;

// Servicios que antes estaban en LegalizationServicesSection
const services = [
  {
    icon: 'description',
    title: 'Boletines eléctricos (CIE)',
    description: 'Certificados de instalación eléctrica para viviendas, locales y todo tipo de inmuebles.'
  },
  {
    icon: 'electrical_services', 
    title: 'Legalización instalación nueva',
    description: 'Inspección, planos y documentación para cumplir con la normativa vigente.'
  },
  {
    icon: 'tune',
    title: 'Aumento de potencia',
    description: 'Boletín actualizado para subir la potencia contratada de forma legal y segura.'
  },
  {
    icon: 'handyman',
    title: 'Reformas eléctricas',
    description: 'Legalización de reformas y actualizaciones al reglamento REBT.'
  },
  {
    icon: 'ev_station',
    title: 'Cargadores coche eléctrico',
    description: 'Legalización de puntos de recarga (IRVE) en viviendas y garajes.'
  },
  {
    icon: 'wb_sunny',
    title: 'Instalaciones fotovoltaicas',
    description: 'Registro y legalización de placas solares para autoconsumo legal.'
  }
];
