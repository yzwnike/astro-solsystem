---
export interface Props {
  title?: string;
}

const { 
  title = "¿Por qué legalizar tu instalación con nosotros?"
} = Astro.props;

const advantages = [
  {
    title: "Técnicos instaladores autorizados",
    description: "Profesionales certificados con años de experiencia",
    icon: "engineering",
    color: "#00AD2E"
  },
  {
    title: "Redacción de boletines y memorias técnicas",
    description: "Documentación completa y profesional",
    icon: "article",
    color: "#00AD2E"
  },
  {
    title: "Tramitación completa ante Industria",
    description: "Nos encargamos de todos los trámites oficiales",
    icon: "business",
    color: "#00AD2E"
  },
  {
    title: "Precios cerrados sin sorpresas",
    description: "Transparencia total en nuestros presupuestos",
    icon: "payments",
    color: "#00AD2E"
  },
  {
    title: "Servicio rápido y profesional",
    description: "Eficiencia garantizada en todos nuestros proyectos",
    icon: "bolt",
    color: "#00AD2E"
  },
  {
    title: "Evita multas y bloqueos",
    description: "Cumplimiento total con la normativa vigente",
    icon: "security",
    color: "#00AD2E"
  }
];
---

<section class="reparlux-advantages-section">
  <div class="advantages-container">
    <h2 class="advantages-title">
      {title}
    </h2>
    
    <div class="advantages-grid">
      {advantages.map((advantage, index) => (
        <div class="advantage-card" data-index={index}>
          <div class="advantage-icon" style={`background: linear-gradient(135deg, ${advantage.color}, ${advantage.color}aa);`}>
            <span class="material-icons">{advantage.icon}</span>
          </div>
          <div class="advantage-content">
            <h3 class="advantage-title">{advantage.title}</h3>
            <p class="advantage-description">{advantage.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .reparlux-advantages-section {
    padding: 80px 20px;
    background: transparent;
  }

  .advantages-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .advantages-title {
    font-size: 36px;
    font-weight: 700;
    color: var(--text-dark);
    text-align: center;
    margin-bottom: 60px;
    position: relative;
  }

  .advantages-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--green-primary);
    border-radius: 2px;
  }

  .add-circle-icon {
    transition: color 0.3s ease;
  }

  .advantages-title:hover .add-circle-icon {
    color: #046bd2 !important;
  }

  .advantages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
    margin-top: 40px;
  }

  .advantage-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 8px 25px rgba(4, 107, 210, 0.15);
    transition: all 0.3s ease;
    border: 2px solid #046bd2;
    display: flex;
    align-items: flex-start;
    gap: 20px;
    position: relative;
    overflow: hidden;
  }

  .advantage-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: #046bd2;
    transform: scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: left;
  }

  .advantage-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(4, 107, 210, 0.25);
    border-color: #046bd2;
  }

  .advantage-card:hover::before {
    transform: scaleX(1);
  }

  .advantage-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .advantage-icon .material-icons {
    color: white;
    font-size: 24px;
  }

  .advantage-content {
    flex: 1;
  }

  .advantage-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .advantage-description {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* Animación stagger para las cards */
  .advantage-card:nth-child(1) { animation-delay: 0.1s; }
  .advantage-card:nth-child(2) { animation-delay: 0.2s; }
  .advantage-card:nth-child(3) { animation-delay: 0.3s; }
  .advantage-card:nth-child(4) { animation-delay: 0.4s; }
  .advantage-card:nth-child(5) { animation-delay: 0.5s; }
  .advantage-card:nth-child(6) { animation-delay: 0.6s; }

  /* Responsive */
  @media (max-width: 921px) {
    .advantages-title {
      font-size: 28px;
    }

    .advantages-grid {
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 35px;
    }

    .advantage-card {
      padding: 25px;
      gap: 15px;
    }

    .advantage-icon {
      width: 50px;
      height: 50px;
    }

    .advantage-icon .material-icons {
      font-size: 20px;
    }

    .advantage-title {
      font-size: 18px;
    }

    .advantage-description {
      font-size: 14px;
    }
  }

  @media (max-width: 544px) {
    .reparlux-advantages-section {
      padding: 60px 15px;
    }

    .advantages-grid {
      grid-template-columns: 1fr;
    }

    .advantage-card {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .advantage-icon {
      margin: 0 auto;
    }
  }
</style>
