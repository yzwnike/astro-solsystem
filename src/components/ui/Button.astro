---
export interface Props {
  variant?: 'primary' | 'secondary' | 'hero' | 'header';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  target?: string;
  onclick?: string;
  className?: string;
  disabled?: boolean;
}

const { 
  variant = 'primary',
  size = 'md',
  href,
  target,
  onclick,
  className = '',
  disabled = false
} = Astro.props;

const Tag = href ? 'a' : 'button';
const baseClasses = `btn btn-${variant} btn-${size} ${className}`;
---

<Tag
  class={baseClasses}
  href={href}
  target={target}
  onclick={onclick}
  disabled={disabled}
>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-block;
    font-family: inherit;
    font-weight: 500;
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-sizing: border-box;
    line-height: 1.2;
  }

  /* Variants */
  .btn-primary {
    background: var(--green-primary);
    color: white;
    box-shadow: 0 4px 15px rgba(83, 195, 7, 0.3);
  }

  .btn-primary:hover {
    background: var(--green-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(83, 195, 7, 0.4);
    color: white;
  }

  .btn-secondary {
    background: transparent;
    color: var(--green-primary);
    border: 2px solid var(--green-primary);
  }

  .btn-secondary:hover {
    background: var(--green-primary);
    color: white;
    transform: translateY(-2px);
  }

  .btn-hero {
    background: var(--green-primary);
    color: white;
    box-shadow: 0 4px 15px rgba(83, 195, 7, 0.3);
    font-size: 24px;
    font-weight: 500;
  }

  .btn-hero:hover {
    background: var(--green-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(83, 195, 7, 0.4);
    color: white;
  }

  .btn-header {
    background: var(--green-primary);
    color: white;
    font-weight: 600;
    border-radius: 4px;
  }

  .btn-header:hover {
    background: var(--green-hover);
    transform: scale(1.05);
    color: white;
  }

  /* Sizes */
  .btn-sm {
    padding: 8px 16px;
    font-size: 14px;
  }

  .btn-md {
    padding: 14px 24px;
    font-size: 16px;
  }

  .btn-lg {
    padding: 16px 32px;
    font-size: 18px;
    border-radius: 25px;
  }

  .btn-hero {
    padding: 14px 24px;
  }

  .btn-header {
    padding: 12px 32px;
    font-size: 16px;
  }

  /* Special styles for service CTA */
  .btn-services-cta {
    background: linear-gradient(135deg, var(--green-primary) 0%, #45a006 100%);
    color: white;
    padding: 16px 28px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(83, 195, 7, 0.3);
    transform: translateY(-2px);
  }

  .btn-services-cta:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(83, 195, 7, 0.4);
    color: white;
  }

  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
  }

  .btn:disabled:hover {
    transform: none;
    box-shadow: none;
  }

  /* Responsive */
  @media (max-width: 921px) {
    .btn-hero {
      font-size: 20px;
      padding: 14px 28px;
    }

    .btn-services-cta {
      padding: 16px 35px;
      font-size: 1rem;
    }
  }

  @media (max-width: 544px) {
    .btn {
      padding: 12px 24px;
    }

    .btn-hero {
      font-size: 18px;
    }
  }
</style>
