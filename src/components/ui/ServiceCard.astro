---
export interface ServiceFeature {
  icon: string;
  text: string;
}

export interface Props {
  icon: string;
  title: string;
  description: string;
  details?: string;
  features: ServiceFeature[];
  highlight?: string;
  additionalClasses?: string;
}

const { 
  icon, 
  title, 
  description, 
  details,
  features,
  highlight,
  additionalClasses = ""
} = Astro.props;
---

<div class={`service-card ${additionalClasses}`}>
  <div class="service-card-content">
    <span class="service-card-icon material-icons">{icon}</span>
    <h3 class="service-card-title">{title}</h3>
    <div class="service-card-description">
      {description}
    </div>
    {details && (
      <div class="service-card-details">
        {details}
      </div>
    )}
  </div>
  
  <div class="service-card-features">
    {features.map(feature => (
      <div class="service-card-feature">
        <span class="service-card-feature-icon material-icons">{feature.icon}</span>
        {feature.text}
      </div>
    ))}
  </div>
  
  {highlight && (
    <div class="service-highlight">
      <span class="material-icons" style="vertical-align: middle; margin-right: 5px;">bolt</span> 
      {highlight}
    </div>
  )}
</div>

<style>
  .service-card {
    background: white;
    border: 3px solid #4A90E2;
    border-radius: 20px;
    padding: 30px 25px;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
    min-height: 280px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(74, 144, 226, 0.2);
    border-color: var(--green-primary);
  }

  .service-card-icon {
    font-size: 4rem;
    color: var(--green-primary);
    margin-bottom: 20px;
    display: block;
  }

  .service-card-title {
    color: var(--ast-global-color-2);
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .service-card-description {
    color: var(--ast-global-color-3);
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .service-card-details {
    color: var(--ast-global-color-3);
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 20px;
  }

  .service-card-features {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: auto;
  }

  .service-card-feature {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: var(--green-primary);
    font-size: 0.85rem;
    font-weight: 600;
    background: rgba(83, 195, 7, 0.1);
    padding: 6px 12px;
    border-radius: 15px;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    margin: 0 auto;
    flex-shrink: 0;
  }

  .service-card-feature-icon {
    font-size: 0.9rem;
    color: var(--green-primary);
  }

  .service-highlight {
    font-weight: 700;
    font-size: 1rem;
    padding: 10px;
    border-radius: 10px;
    margin-top: 15px;
    text-align: center;
    color: var(--green-primary);
    background: rgba(83, 195, 7, 0.1);
  }

  @media (max-width: 921px) {
    .service-card {
      padding: 1.5em 1em;
    }

    .service-card-title {
      font-size: 20px;
    }
  }

  @media (max-width: 544px) {
    .service-card {
      padding: 1.5em 1em;
    }
  }
</style>
