	/* Variables and reset - Exact match with original */
	:root {
		--green-primary: #53C307;
		--green-hover: #45a006;
		--text-dark: #334155;
		--text-white: #FFFFFF;
		--bg-light: #F0F5FA;
		
		/* Original Astra theme variables */
		--ast-global-color-0: #046bd2;
		--ast-global-color-1: #045cb4;
		--ast-global-color-2: #1e293b;
		--ast-global-color-3: #334155;
		--ast-global-color-4: #F0F5FA;
		--ast-global-color-5: #FFFFFF;
		--ast-global-color-6: #D1D5DB;
		--ast-global-color-7: #111111;
		--ast-global-color-8: #111111;
		--ast-border-color: var(--ast-global-color-6);
		
		/* Container widths */
		--ast-container-default-xlg-padding: 2.5em;
		--ast-normal-container-width: 1200px;
		--ast-narrow-container-width: 750px;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	/* Google Fonts - Montserrat Alternates */
	@import url('https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@300;400;500;600;700;800&display=swap');
	
	html, body {
		width: 100%;
		max-width: none;
		overflow-x: auto;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		font-family: 'Montserrat Alternates', -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen-Sans, Ubuntu, Cantarell, Helvetica Neue, sans-serif;
		font-weight: 400;
		font-size: 16px;
		line-height: 1.65em;
		color: var(--text-dark);
		background: #fff;
	}
	
	a {
		color: inherit;
		text-decoration: none;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}
	
	/* Header Container - Full width for extreme positioning */
	.site-header .container {
		max-width: 100%;
		padding: 0 30px;
	}
	
	/* Hero Section with Background - Forest background image */
	.hero-section {
		/* Forest background simple sin degradado */
		background: url('/images/fondo.png') center/cover no-repeat;
		min-height: 100vh;
		position: relative;
		display: flex;
		flex-direction: column;
		color: var(--text-white);
		padding-top: 0;
		padding-bottom: 0;
	}
	
	/* Header transparente sobre el hero */
	.site-header {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 1000;
		background: transparent;
		padding: 20px 0;
	}
	
	.main-header-bar {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
	}
	
	.site-logo {
		display: flex;
		align-items: center;
		flex: 0 0 auto;
	}
	
	.site-logo img {
		height: 60px;
		width: auto;
	}
	
	/* Navigation - Centered */
	.main-navigation {
		flex: 1;
		display: flex;
		justify-content: center;
	}
	
	.main-navigation ul {
		display: flex;
		list-style: none;
		gap: 40px;
		align-items: center;
		margin: 0;
		padding: 0;
	}
	
	/* Header CTA Button Container */
	.header-cta-container {
		flex: 0 0 auto;
	}
	
	.main-navigation a {
		color: var(--text-white);
		text-decoration: none;
		font-weight: 400;
		transition: color 0.3s;
		position: relative;
	}
	
	.main-navigation a:hover {
		color: var(--green-primary);
	}
	
	/* Dropdown Navigation Styles */
	.nav-item {
		position: relative;
	}
	
	.dropdown {
		position: relative;
		cursor: pointer;
	}
	
	.dropdown::after {
		content: "▼";
		font-size: 10px;
		margin-left: 8px;
		transition: transform 0.3s;
	}
	
	.dropdown:hover::after {
		transform: rotate(180deg);
	}
	
	/* Dropdown Menu */
	.dropdown-menu {
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		margin-top: 10px;
		background: white;
		border-radius: 8px;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
		min-width: 280px;
		opacity: 0;
		visibility: hidden;
		transform: translateX(-50%) translateY(-10px);
		transition: all 0.3s ease;
		z-index: 1000;
		padding: 0;
		display: flex;
		flex-direction: column;
	}
	
	.nav-item:hover .dropdown-menu {
		opacity: 1;
		visibility: visible;
		transform: translateX(-50%) translateY(0);
	}
	
	.dropdown-menu::before {
		content: '';
		position: absolute;
		top: -6px;
		left: 50%;
		transform: translateX(-50%);
		border-left: 6px solid transparent;
		border-right: 6px solid transparent;
		border-bottom: 6px solid white;
	}
	
	.dropdown-menu li {
		list-style: none;
		margin: 0;
		padding: 0;
		width: 100%;
	}
	
	.dropdown-menu a {
		display: block;
		padding: 12px 20px;
		color: var(--text-dark);
		text-decoration: none;
		font-weight: 700;
		font-size: 14px;
		transition: all 0.3s ease;
		width: 100%;
		box-sizing: border-box;
		white-space: nowrap;
		border: none;
		margin: 0;
	}
	
	.dropdown-menu a:hover {
		color: white;
		background: var(--green-primary);
	}
	
	/* Header CTA Button */
	.header-cta-button {
		background: var(--green-primary);
		color: white;
		padding: 12px 32px;
		border-radius: 4px;
		font-weight: 600;
		font-size: 16px;
		transition: all 0.3s;
		border: none;
		cursor: pointer;
	}
	
	.header-cta-button:hover {
		background: var(--green-hover);
		transform: scale(1.05);
	}
	
	/* Hero Content */
	.hero-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 120px 20px 80px;
	}
	
	/* Material Icons */
	@font-face {
		font-family: 'Material Icons';
		font-style: normal;
		font-weight: 400;
		src: url(https://fonts.gstatic.com/s/materialicons/v140/flUhRq6tzZclQEJ-Vdg-IuiaDsNc.woff2) format('woff2');
	}
	
	.material-icons {
		font-family: 'Material Icons';
		font-weight: normal;
		font-style: normal;
		font-size: 24px;
		line-height: 1;
		letter-spacing: normal;
		text-transform: none;
		display: inline-block;
		white-space: nowrap;
		word-wrap: normal;
		direction: ltr;
		-webkit-font-feature-settings: 'liga';
		-webkit-font-smoothing: antialiased;
	}
	
	/* Icon Row */
	.icon-row {
		display: flex;
		gap: 30px;
		margin-bottom: 40px;
		justify-content: center;
		flex-wrap: wrap;
	}
	
	.icon-item {
		color: var(--text-white);
		font-size: 32px;
		opacity: 0.9;
		transition: opacity 0.3s;
	}
	
	.icon-item:hover {
		opacity: 1;
	}
	
	/* Proceso Section */
	.proceso-section {
		padding: 0;
		background-color: var(--ast-global-color-5);
	}
	
	.proceso-header {
		/* Gradiente animado con colores eléctricos */
		background: linear-gradient(
			135deg,
			#1e3c72 0%,
			#2a5298 25%,
			#046bd2 50%,
			#53C307 75%,
			#45a006 100%
		);
		background-size: 300% 300%;
		animation: gradientShift 8s ease infinite;
		padding: 80px 0;
		color: var(--ast-global-color-5);
		text-align: center;
		position: relative;
		overflow: hidden;
	}
	
	/* Animación para el gradiente eléctrico */
	@keyframes gradientShift {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.proceso-header::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.1);
		z-index: 1;
	}
	
	.proceso-header h2 {
		font-size: 2rem;
		margin: 0;
		position: relative;
		z-index: 2;
	}
	
	.proceso-header h3 {
		font-size: 3rem;
		margin: 10px 0 0;
		position: relative;
		z-index: 2;
	}
	
	.proceso-row {
		display: flex;
		align-items: center;
	}
	
	.proceso-imagen {
		width: 50%;
		padding: 0;
	}
	
	.proceso-imagen img {
		width: 100%;
		height: auto;
		display: block;
	}
	
	.proceso-content {
		width: 50%;
		padding: 60px 40px;
		background-color: var(--ast-global-color-5);
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 400px;
	}
	
	.proceso-content h3 {
		font-size: 1.8rem;
		color: var(--ast-global-color-2);
		margin-bottom: 20px;
		font-weight: 600;
	}
	
	.proceso-feature {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		margin-bottom: 50px;
		padding: 40px 20px;
		transition: all 0.3s ease;
	}
	
	.proceso-feature:hover {
		transform: translateY(-3px);
	}
	
	.proceso-feature .material-icons {
		color: var(--green-primary);
		font-size: 56px;
		margin-bottom: 25px;
		transition: all 0.3s ease;
		filter: drop-shadow(0 4px 8px rgba(83, 195, 7, 0.2));
	}
	
	.proceso-feature:hover .material-icons {
		transform: scale(1.1);
		filter: drop-shadow(0 6px 12px rgba(83, 195, 7, 0.4));
	}
	
	.proceso-feature-content {
		width: 100%;
	}
	
	.proceso-feature-content h4 {
		margin: 0 0 15px;
		color: var(--ast-global-color-2);
		font-size: 1.8rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 1px;
		line-height: 1.2;
	}
	
	.proceso-feature-content p {
		margin: 0;
		color: var(--ast-global-color-3);
		font-size: 1.1rem;
		line-height: 1.6;
		font-weight: 500;
		max-width: 400px;
		margin: 0 auto;
	}
	
	@media (max-width: 921px) {
		.proceso-row {
			flex-direction: column;
		}
		
		.proceso-imagen, .proceso-content {
			width: 100%;
		}
		
		.proceso-content {
			padding: 40px 20px;
			min-height: auto;
		}
		
		.proceso-row-reverse .proceso-imagen {
			order: 1;
		}
		
		.proceso-row-reverse .proceso-content {
			order: 2;
		}
		
		.proceso-feature {
			padding: 35px 15px;
			margin-bottom: 40px;
		}
		
		.proceso-feature .material-icons {
			font-size: 48px;
			margin-bottom: 20px;
		}
		
		.proceso-feature-content h4 {
			font-size: 1.6rem;
			margin-bottom: 15px;
		}
		
		.proceso-feature-content p {
			font-size: 1rem;
			max-width: 100%;
		}
	}
	
	/* Main Title con estilos exactos del original */
	.hero-title {
		/* Estilos base del original index.html */
		font-size: 36px;
		font-size: 2.25rem;
		font-weight: 600;
		line-height: 1.4em;
		color: var(--text-white); /* Mantener blanco para contraste en hero */
		padding: 0;
		margin: 0 0 40px 0;
		
		/* Mantener efectos visuales para el hero */
		max-width: 1400px;
		position: relative;
		overflow: hidden;
		background: linear-gradient(
			90deg,
			#ffffff 0%,
			#ffffff 25%,
			#53C307 50%,
			#ffffff 75%,
			#ffffff 100%
		);
		background-size: 400% 100%;
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: hero-title-scroll 8s ease-in-out infinite;
	}

	@keyframes hero-title-scroll {
		0% {
			background-position: 0% 50%;
			-webkit-text-fill-color: transparent;
		}
		25% {
			background-position: 100% 50%;
			-webkit-text-fill-color: transparent;
		}
		50% {
			background-position: 200% 50%;
			-webkit-text-fill-color: transparent;
		}
		75% {
			background-position: 300% 50%;
			-webkit-text-fill-color: transparent;
		}
		100% {
			background-position: 400% 50%;
			-webkit-text-fill-color: transparent;
		}
	}

	.hero-subtitle {
		font-size: 22px;
		line-height: 1.5;
		margin-bottom: 60px;
		max-width: 1400px;
		opacity: 0.95;
